{
  "name": "Flutter",
  // Configure a standard Ubuntu image with Flutter
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      // Install the essential Flutter and Dart extensions
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  },
  // Check flutter readiness
  "postCreateCommand": "flutter doctor"
}