{
  "name": "Flutter Project",
  // Use a base image that includes common tools
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    // This is the key part: it installs the Flutter SDK
    "ghcr.io/devcontainers/features/flutter:1": {}
  },

  "customizations": {
    "vscode": {
      // Install the essential Flutter and Dart extensions
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  },

  // Forward the port for the web debugger
  "forwardPorts": [8080],
  "postCreateCommand": "sudo chown -R $(whoami) /usr/local/flutter"
}